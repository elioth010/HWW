<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:layout_marginLeft="@dimen/margin_extra_short"
    android:layout_marginRight="@dimen/margin_extra_short"
    android:background="@color/grey_100">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        android:id="@+id/card"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/relative_cardview"
        android:gravity="top|start"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/image_card_view_cat"
            android:src="@mipmap/todas_cobranzas"
            android:layout_alignParentTop="true"
            android:paddingLeft="12dp"
            android:paddingTop="0dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:layout_marginRight="15dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/contenedor"
            android:layout_toRightOf="@+id/image_card_view_cat">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_categoria"
                android:id="@+id/text_view_nombre_cat"
                android:textColor="@color/indigo_900"
                android:textStyle="bold"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/descripcion_categoria"
                android:layout_below="@+id/text_view_nombre_cat"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/image_card_view"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/text_card_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/generic_text_card_view"
                    android:textSize="16sp"
                    android:textColor="@color/grey_800"
                    android:gravity="center_vertical"
                    android:autoText="true"
                    android:layout_toRightOf="@+id/image_card_view"
                    android:textAlignment="gravity"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/text_card_view_descripcion"
                    android:layout_below="@+id/text_card_view"
                    android:layout_toRightOf="@+id/image_card_view"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey_600" />
            </RelativeLayout>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress_bar_img_load"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:indeterminate="false" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>