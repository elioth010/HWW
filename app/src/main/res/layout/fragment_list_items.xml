<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/list_view_shape"
    android:elevation="8dp"
    android:translationZ="2dp"
    android:gravity="center"
    android:minHeight="15dp"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="0dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/list_items_sensor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="true"
                android:elegantTextHeight="false"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:paddingBottom="0dp"
                android:layout_marginLeft="@dimen/margin_extra_short"
                android:layout_marginStart="@dimen/margin_extra_short"
                android:text="@string/content_description"
                android:textSize="12dp"
                android:textColor="@color/secondary_text"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/list_items_fecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elegantTextHeight="false"
                android:gravity="center_vertical|end"
                android:paddingBottom="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:text="@string/content_description"
                android:textSize="12dp"
                android:layout_marginEnd="@dimen/margin_extra_short"
                android:layout_marginRight="@dimen/margin_extra_short"
                android:textColor="@color/secondary_text"
                android:layout_toRightOf="@+id/list_items_valor" />

            <TextView
                android:id="@+id/list_items_valor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elegantTextHeight="false"
                android:gravity="center_vertical|center_horizontal"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:text="@string/content_description"
                android:textSize="12dp"
                android:textColor="@color/secondary_text"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
