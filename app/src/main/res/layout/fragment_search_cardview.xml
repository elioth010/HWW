<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/digicel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_gravity="left"
    android:layout_margin="@dimen/margin_short"
    android:background="@drawable/ripple"
    android:elevation="8dp"
    android:onClick="irRecarga"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/relative_cardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple">

        <RelativeLayout
            android:id="@+id/relative_cardview_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple">

            <ProgressBar
                android:id="@+id/progress_bar_img_load"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="false"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/image_card_view"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:padding="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_cardview_texts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple"
            android:paddingBottom="@dimen/margin_short"
            android:layout_below="@+id/relative_cardview_img">


            <TextView
                android:id="@+id/text_card_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_standard"
                android:layout_marginRight="@dimen/margin_standard"
                android:layout_marginTop="@dimen/margin_standard"
                android:autoText="true"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:inputType="textNoSuggestions|none"
                android:text="@string/generic_text_card_view"
                android:textAlignment="center"
                android:textColor="@color/primary_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_card_view2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_card_view"
                android:layout_marginLeft="@dimen/margin_standard"
                android:layout_marginRight="@dimen/margin_standard"
                android:autoText="true"
                android:inputType="textNoSuggestions|none"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/margin_short"
                android:text="@string/generic_text_card_view"
                android:textAlignment="center"
                android:textColor="@color/secondary_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_card_view3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_card_view2"
                android:layout_marginLeft="@dimen/margin_standard"
                android:layout_marginRight="@dimen/margin_standard"
                android:autoText="true"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:inputType="textNoSuggestions|none"
                android:paddingTop="@dimen/margin_short"
                android:text="@string/generic_text_card_view"
                android:textAlignment="center"
                android:textColor="@color/secondary_text"
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>