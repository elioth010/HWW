<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 21+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v21/styles.xml on API 21+ devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Main theme colors -->
        <!-- your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/indigo_500</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/indigo_900</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent_material_light</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/indigo_500</item>
        <item name="colorControlHighlight">@color/indigo_500</item>
    </style>
    <style name="App_EditTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#808080</item>
        <item name="android:layout_height">45dip</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/indigo_500</item>
        <item name="colorControlHighlight">@color/indigo_500</item>
    </style>

    <style name="AppBaseThemeDark" parent="@style/Theme.AppCompat">

        <!-- Main theme colors -->
        <!-- your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/indigo_500</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/red_900</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent_material_light</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
    </style>
</resources>